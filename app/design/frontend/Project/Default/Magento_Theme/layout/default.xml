<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="advanced-search-link" remove="true"/>

        <move element="minicart" destination="header-wrapper"/>
        <!--<move element="wish-list-link" destination="header-wrapper"/>-->
        <!--<move element="authorization-link" destination="header-wrapper"/>-->

        <referenceContainer name="header.container">
            <block name="header-top-line" template="Magento_Theme::header-top-line.phtml" before="-">
                <block class="Magento\Cms\Block\Block" name="header-top-line-content">
                    <arguments>
                        <argument name="block_id" xsi:type="string">header-top-line</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>



